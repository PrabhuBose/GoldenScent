<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <ImageView
        android:id="@+id/productImage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/parada" />

    <TextView
        android:id="@+id/producName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/productImage"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productFlavour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/producName"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/productImage"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/addImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/productFlavour"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:src="@drawable/add" />


    <TextView
        android:id="@+id/oldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/productImage"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/productImage"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/newPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/productImage"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/oldPrice"
        android:textColor="@color/red_new"
        android:textSize="16sp" />


</RelativeLayout>